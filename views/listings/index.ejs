<% layout("/layouts/boilerplate") %> 

<div class="container mt-5">
    <h3 class="mb-4">All Listings</h3>
    
   <!-- <form method="GET" action="/listings/new" class="mb-4">
        <button class="btn btn-primary">Create New Listing</button>
    </form>  -->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of allListings) { %>
        <div class="col-md-4 mb-4">
            <a href="/listings/<%= listing._id %>" class="listing-l">
                <div class="card col listing-card ">
                    <img src="<%= listing.image %>" class="card-img-top rounded-3" alt="listing_image" style="height: 20rem; object-fit: cover;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b> <br> 
                            &#8377; <%= listing.price %> /night
                        </p>
                    </div>
                </div>
            </a>
        </div>
        <% } %>
    </div>
</div> 
